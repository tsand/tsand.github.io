---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.jpg';
---

<Layout title="Theisen Sanders">
  <div class="px-6 pt-24 pb-16 md:px-12 md:pt-32">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Profile Image -->
      <div class="mb-8 flex justify-center">
        <div class="relative w-32 h-32 md:w-40 md:h-40 overflow-hidden rounded-2xl profile-image">
          <Image
            src={profileImage}
            alt="Theisen Sanders"
            width={320}
            height={320}
            format="webp"
            quality={80}
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
      </div>

      <!-- Name -->
      <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
        Theisen Sanders
      </h1>

      <!-- Bio -->
      <p class="text-lg md:text-xl mb-8 text-foreground-muted leading-relaxed">
        Director at Workiva and founder of Cove, a platform helping families navigate pediatric therapy. Based in Chicago.
      </p>

      <!-- Separator -->
      <div class="separator mb-8"></div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row justify-center gap-3">
        <a
          href="https://github.com/tsand"
          target="_blank"
          rel="noopener noreferrer"
          class="btn"
          aria-label="GitHub Profile">
          <Icon name="fa-brands:github" class="text-xl" />
          <span>GitHub</span>
        </a>

        <a
          href="https://linkedin.com/in/theisensanders"
          target="_blank"
          rel="noopener noreferrer"
          class="btn"
          aria-label="LinkedIn Profile">
          <Icon name="fa-brands:linkedin" class="text-xl" />
          <span>LinkedIn</span>
        </a>

        <a
          href="/Theisen_Sanders_CV.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="btn"
          aria-label="Download CV">
          <Icon name="fa6-solid:file-pdf" class="text-lg" />
          <span>CV</span>
        </a>
      </div>
    </div>
  </div>
</Layout>
